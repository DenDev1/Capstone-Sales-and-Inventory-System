                    </tr>
                }
            </tbody>
        </table>
 *@
      @*   <h3>Monthly</h3> *@
        <table class="report-table">
            <thead>
                <tr>
                    <th>Products</th>
                    <th>Category</th>
                    <th>Supplier</th>
                    <th>Date</th>
                    <th>Unit Price</th>
                    <th>Remaining Stock</th>
            
      
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MonthlySalesItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.SupplierProfile.Supplier</td>
                        <td>@item.Date.ToString("MM/dd/yyyy hh:mm:ss tt")</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.StockQuantity</td>
             
                
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <button class="btn-custom btn-back" onclick="window.location.href='@Url.Action("Index", "Inventory")'">Back</button>
            <button class="btn-custom btn-print" onclick="window.print()">Print Report</button>
        </div>
    </div>

</body>
</html>
