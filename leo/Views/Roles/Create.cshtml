@model leo.Models.Role

@{
    ViewData["Title"] = "Create Role";
    Layout = "_Layout_Login";
}

<div class="container mt-5 p-5 bg-light shadow-sm rounded">
   
 

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="RoleName" class="form-label fw-bold">Role Name</label>
                    <input asp-for="RoleName" class="form-control shadow-sm" placeholder="Enter role name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="Create" class="btn btn-primary rounded-pill px-4 shadow" />
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
