@model leo.Models.Users

@{
    ViewData["Title"] = "Enter Reset Code";
    Layout = "_Layout_Login";
}

<div class="container d-flex align-items-center justify-content-center ">
    <div class="card border-0 shadow-lg" style="max-width: 400px; border-radius: 15px;">
        <div class="card-body p-5">
            <h3 class="text-center mb-4" style="font-weight: 600; color: #333;">Enter Reset Code</h3>
            <form asp-action="EnterResetCode" method="post">
                <div class="form-group mb-4">
                    <label for="email" style="font-weight: 500; color: #555;">Email</label>
                    <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Enter your email" required style="border-radius: 8px;">
                </div>
                <div class="form-group mb-4">
                    <label for="resetCode" style="font-weight: 500; color: #555;">Reset Code</label>
                    <input type="text" class="form-control form-control-lg" id="resetCode" name="resetCode" placeholder="Enter reset code" required style="border-radius: 8px;">
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <!-- Centered Button with 50% width -->
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary w-50"
                            style="height: 45px; background-color: #007bff; border-color: #007bff; border-radius: 8px; font-size: 16px;">
                        Verify Code
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

