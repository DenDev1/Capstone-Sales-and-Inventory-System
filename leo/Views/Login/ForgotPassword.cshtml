@model leo.Models.Users

@{
    Layout = "_Layout_Login";
}

<!-- Forgot Password Form -->
<div class="container d-flex align-items-center justify-content-center ">
    <div class="card border-0 shadow-lg" style="max-width: 400px; border-radius: 15px;">
        <div class="card-body p-5">
            <h3 class="text-center mb-4" style="font-weight: 600; color: #333;">Account Recovery</h3>
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group mb-4">
                    <label for="email" style="font-weight: 500; color: #555;">Email</label>
                    <input type="email" class="form-control" id="email" asp-for="Email" placeholder="Enter your email" required
                           style="height: 45px; border-radius: 8px; padding-left: 15px; font-size: 16px;">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Centered Button with 50% width -->
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary w-50"
                            style="height: 45px; background-color: #007bff; border-color: #007bff; border-radius: 8px; font-size: 16px;">
                        Send Code
                    </button>
                </div>
            </form>

            <div class="text-center mt-4">
                <p class="mb-0" style="color: #555;">
                    Go back?
                    <a href="Index" class="text-primary" style="text-decoration: none;">Login</a>
                </p>
            </div>
        </div>
    </div>
</div>
